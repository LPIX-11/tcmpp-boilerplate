.osn-input {
  position: relative;
  border-radius: 16rpx;
  border: 2rpx solid #efefef;
  background: #fafafa;
  min-height: 68rpx;
  display: flex;
  align-items: center;
  font-size: 38rpx;
}
.osn-input__field {
  flex: 1;
  height: 68rpx;
  border: none;
  background: transparent;
  font-size: inherit;
  outline: none;
  width: 40ch; 
  overflow: hidden; 
  text-overflow: ellipsis; 
  white-space: nowrap;
}
.osn-input__icon {
  position: absolute;
  right: 0rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #b3b3b3;
  font-size: 54rpx;
}
.osn-input__results {
  width: 100%;
  z-index: 1001;
  left: 0;
  top: 80rpx;
  background: #fff;
  border-radius: 0 0 20rpx 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.06);
  overflow: hidden;
}
.osn-input__field--picker {
  width: 100%;
  height: 68rpx;
  line-height: 68rpx;
  background: transparent;
  font-size: inherit;
  border: none;
  padding: 0;
  outline: none;
}
.osn-input__field--picker.readonly {
  color: #bbb;
}