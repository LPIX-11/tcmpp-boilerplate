@import '/app.wxss';

.osn-tab-bar {
  width: 100%;
  /* No more hard-coded bg or radius */
}
.osn-tab-bar__tabs {
  display: flex;
  /* background: none, let containerClass handle it */
}
.osn-tab-bar__tab {
  flex: 1;
  text-align: center;
  cursor: pointer;
  transition: background 0.25s, color 0.25s;
  /* Remove padding, color, etc. */
}
.osn-tab-bar__tab.active {
  /* Only highlight if you want to provide a default, or let parent style it */
}
