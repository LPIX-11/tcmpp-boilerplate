<view class="tc-image-container {{ containerClass }}" style="{{ containerStyle }}">
  <!-- Loading -->
  <view wx:if="{{ loading }}" class="tc-image-loading">
    <view class="tc-image-spinner" />
    <text wx:if="{{ loadingText }}">{{ loadingText }}</text>
  </view>

  <!-- Error -->
  <view wx:elif="{{ error }}" class="tc-image-error" bind:tap="onErrorTap">
    <text class="tc-image-error-icon">{{ errorIcon ? errorIcon : '⚠️' }}</text>
    <text wx:if="{{ errorText }}">{{ errorText }}</text>
    <text wx:if="{{ retryText }}">{{ retryText }}</text>
  </view>

  <!-- Image -->
  <image
    wx:else
    class="tc-image {{ imageClass }}"
    style="{{ imageStyle }}"
    src="{{ computedSrc }}"
    mode="{{ mode }}"
    lazy-load="{{ lazyLoad }}"
    show-menu-by-longpress="{{ showMenuByLongpress }}"
    bind:load="onImageLoad"
    bind:error="onImageError"
    bind:tap="onImageTap"
    bind:longpress="onImageLongpress"
  />

  <!-- Overlay -->
  <view wx:if="{{ hasOverlay }}" class="tc-image-overlay {{ overlayClass }}">
    <slot name="overlay" />
  </view>

  <!-- Badge -->
  <view wx:if="{{ badge }}" class="tc-image-badge {{ badgeClass }}" style="{{ badgeStyle }}">
    {{ badge }}
  </view>
</view>