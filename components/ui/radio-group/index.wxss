@import '/app.wxss';

.osn-radio-circle {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  border: 4rpx solid #606060;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
}
.osn-radio-inner {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background: transparent;
  transition: background 0.2s;
}

.osn-radio-circle.active {
  border: 4rpx solid #fff;
  background: transparent;
}

.osn-radio-inner.active {
  background: #fff;
  border: 5rpx solid #fff !important;
  box-shadow: 0 0 0 1rpx #fff inset;
} 